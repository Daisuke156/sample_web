<div class="container">
<h1>Create</h1>
  <%= form_for(@menu) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :price %>
      <%= f.text_field :price %>
      
      <%= f.label :calorie %>
      <%= f.text_field :calorie %>
      
      <%= f.label :category %>
      <%= f.select :category, [['main','main'],['drink','drink'],['dessert','dessert']], include_blank: "SELECT"  %>

      <%= f.submit "Create!", class: "btn" %>
  <% end %>
</div>
