<div>
  <h1><%= @menu.name %></h1>
  <li><%= @menu.category %></li>
  <li>￥<%= @menu.price %></li>
  <li><%= @menu.calorie %>cal</li>
  <div><%= @menu.coment %></div>
  <% if Like.find_by(user_id: @current_user.id, menu_id: @menu.id) %>
    <%= link_to("/likes/#{@menu.id}/destroy", {method:"post"}) do %>
      <span class="fa fa-heart like-btn-unlike"></span>
    <% end %>
  <% else %>
    <%= link_to("/likes/#{@menu.id}/create", {method:"post"}) do %>
      <span class="fa fa-heart like-btn"></span>
    <% end %>
  <% end %>
  <%= @likes_count %>
  <div><%= link_to "←To index", menus_path %></div>
</div>
